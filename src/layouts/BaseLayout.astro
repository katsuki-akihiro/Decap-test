---
const { title, description } = Astro.props;
---
<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <style>
      body {
        font-family: "Noto Sans JP", "Hiragino Kaku Gothic ProN", "Yu Gothic", sans-serif;
        margin: 0;
        background: #f9fafb;
        color: #111827;
      }
      header {
        background: #111827;
        color: #fff;
        padding: 24px 16px;
      }
      header a {
        color: #fff;
        text-decoration: none;
      }
      main {
        max-width: 960px;
        margin: 0 auto;
        padding: 24px 16px 64px;
        background: #fff;
      }
      h1 {
        margin-top: 0;
      }
      .meta {
        color: #6b7280;
        font-size: 0.9rem;
      }
      .card-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 16px;
      }
      .card {
        border: 1px solid #e5e7eb;
        border-radius: 12px;
        padding: 16px;
        background: #fff;
      }
      .card a {
        color: #111827;
        text-decoration: none;
      }
      footer {
        text-align: center;
        color: #6b7280;
        padding: 32px 16px;
      }
      .content :global(img) {
        max-width: 100%;
        height: auto;
      }
    </style>
  </head>
  <body>
    <header>
      <h1><a href={`${Astro.site?.pathname ?? "/"}`}>Decap CMS PoC</a></h1>
      <p class="meta">j-aic.com 移行検証用デモ</p>
    </header>
    <main>
      <slot />
    </main>
    <footer>Decap CMS PoC (Astro)</footer>
  </body>
</html>
